<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/css/style.css">
  <script>
    // This script validates the email before submitting the form
    const form = document.querySelector('form');
    const emailInput = document.querySelector('#email');

    form.addEventListener('submit', (event) => {
      const emailValue = emailInput.value;
      if (!validateEmail(emailValue)) {
        alert('Please enter a valid email address.');
        event.preventDefault(); // Prevent form submission
      }
    });

    // Email validation regex pattern
    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email);
    }
  </script>
</head>
<body>
  <div class="container">
    <h2>Forgot Password</h2>
    <!-- The form submits to the /forgot-password endpoint -->
    <form action="/forgot-password" method="post">
      <label for="email">Enter your Email ID:</label>
      <input type="email" id="email" name="email" placeholder="Enter your email ID" required>

      <button type="submit">Reset Password</button>
    </form>

    <div class="link-container">
      <p>Remember your password? <a href="/">Login</a></p>
    </div>
  </div>

  <!-- JavaScript for displaying error messages from the backend -->
  <script>
    <% if (typeof error !== 'undefined' && error) { %>
      alert("<%= error %>");
    <% } %>
  </script>
</body>
</html>
