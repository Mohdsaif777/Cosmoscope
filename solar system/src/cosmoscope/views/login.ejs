<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<style>
  .password-wrapper {
  position: relative;
  width: 95%;
}

.password-wrapper input {
  width: 100%;
  padding-right: 5px; /* Space for the eye icon */
}

.toggle-eye {
  position: absolute;
  top: 40%;
  right: 2px;
  transform: translateY(-50%);
  cursor: pointer;
  user-select: none;
  font-size: 1rem;
}

</style>
<body>
  <div class="container">
    <h2>Login</h2>
    <form action="/login" method="post">
      <label for="email">Email ID:</label>
      <input type="text" id="email" name="email" placeholder="Enter your email ID" required>

      <label for="password">Password:</label>
<div class="password-wrapper">
  <input type="password" id="password" name="password" placeholder="Enter your password" required>
  <span id="togglePassword" class="toggle-eye">👁️</span>
</div>
<script>
  const togglePassword = document.getElementById("togglePassword");
  const passwordInput = document.getElementById("password");

  togglePassword.addEventListener("click", function () {
    const isPassword = passwordInput.getAttribute("type") === "password";
    passwordInput.setAttribute("type", isPassword ? "text" : "password");
    this.textContent = isPassword ? "👁️" : "👁️";
  });
</script>

      <button type="submit">Login</button>
    </form>
    <div class="link-container">
      <p>Don't have an account? <a href="/register">Register</a></p>
      <p><a href="/forgot-password">Forgot Password?</a></p>
    </div>
  </div>

  <!-- Script for displaying errors -->
  <script>
    // Assuming your server sends 'error' variable to the view
    <% if (typeof error !== 'undefined' && error) { %>
      alert("<%= error %>");
    <% } %>
  </script>
</body>
</html>
